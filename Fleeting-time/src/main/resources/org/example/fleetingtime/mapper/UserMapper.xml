<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.fleetingtime.mapper.UserMapper">
    <select id="findByUsername" resultType="org.example.fleetingtime.bean.User" >
        SELECT id, username, password
        FROM fleeting_time.users
        WHERE username = #{username}
    </select>
    <insert id="save">
        INSERT INTO fleeting_time.users (username, password)
        VALUES (#{username}, #{password})
    </insert>
    <delete id="delete">
        DELETE FROM fleeting_time.users
        WHERE id = #{id}
    </delete>
</mapper>